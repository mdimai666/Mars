@using MarsDocs.WebApp.Models

<FluentNavGroup Title=@MenuItem.Title>
    @foreach (var subitem in MenuItem.SubItems.OrderBy(s => s.Order))
    {
        @if (!subitem.SubItemFlag)
        {
            <FluentNavLink Href=@subitem.Url>@subitem.Title</FluentNavLink>
        }
        else
        {
            <DocsTreeMenuGroup MenuItem="subitem" />
        }
    }
</FluentNavGroup>

@code {
    [Parameter] public MenuItem MenuItem { get; set; } = default!;
}
