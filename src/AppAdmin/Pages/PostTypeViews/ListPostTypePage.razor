@page "/PostType"
@using System.Linq.Expressions
@using AppFront.Shared.Handlers.PostType
@using Mars.Shared.Contracts.PostTypes
@using Microsoft.AspNetCore.Authorization
@using Microsoft.FluentUI.AspNetCore.Components
@inject IStringLocalizer<AppRes> L
@attribute [Authorize(Roles = "Admin")]

<ContentWrapper Title="@AppRes.PostTypes" WrapperClass="vstack">

    <div class="hstack">
        <FluentSearch @bind-Value=_searchText
                      @bind-Value:after=HandleSearchInput
                      Immediate
                      ImmediateDelay="300"
                      Appearance="FluentInputAppearance.Filled"
                      AriaLabel="Search" />
        <div class="ms-auto">
            <a href="@urlEditPage">
                <FluentButton Appearance="Appearance.Accent" IconStart="@(new Icons.Regular.Size16.Add())">@AppRes.Create</FluentButton>
            </a>
        </div>
    </div>

    <div class="mt-4 vstack flex-fill">
        <div class="flex-fill" style="height: 534px; overflow:auto;">
            <FluentDataGrid ItemsProvider="dataProvider"
                            @ref=table
                            ItemSize="76"
                            Virtualize
                            EmptyContent="DataGrid_EmptyContent"
                            ResizableColumns
                            GridTemplateColumns="3fr 2fr 1fr 1fr"
                            GenerateHeader="GenerateHeaderOption.Sticky"
                            Class="adaptive-table"
                            TGridItem="PostTypeListItemResponse">
                <TemplateColumn SortBy="@(GridSort<PostTypeListItemResponse>.ByDescending(f => f.Title))"
                                Title="@AppRes.Title"
                                InitialSortDirection="SortDirection.Ascending"
                                IsDefaultSortColumn="true"
                                Sortable="true">
                    <div class="d-none d-lg-block">
                        <div class="card-body py-1 px-3">
                            <div class="fs-6">
                                <a href="@urlEditPage/@context.Id">
                                    @context.Title
                                </a>
                            </div>
                            <div class="text-secondary small">@context.TypeName</div>
                        </div>
                    </div>
                    <div class="d-block d-lg-none d-card-glow position-relative">
                        <div class="card-body py-1 px-3">
                            <h5 class="card-title">@context.Title</h5>
                            <div class="text-secondary small">@context.TypeName</div>
                        </div>
                        <a href="@urlEditPage/@context.Id" class="stretched-link"></a>
                    </div>
                </TemplateColumn>
                <TemplateColumn Title="@AppRes.EnabledFeatures">
                    <FluentOverflow Style="width: 100%;">
                        @foreach (var tag in context.EnabledFeatures)
                        {
                            <FluentOverflowItem><FluentBadge>@tag</FluentBadge></FluentOverflowItem>
                        }
                    </FluentOverflow>
                </TemplateColumn>
                <PropertyColumn Property=@(f => f.CreatedAt) Title="@AppRes.CreatedAt" Format="d" Sortable="true" Align="Align.End" />
                <TemplateColumn Title="@AppRes.Actions" Align="@Align.End">
                    <DFluentDeleteButton OnConfirm=@(e => Delete(context.Id)) />
                </TemplateColumn>
            </FluentDataGrid>
        </div>
        <br />
        <div class="hstack">
            <TotalResultsFound TotalCount="@data.TotalCount" />
            <div class="ms-auto">
            </div>
        </div>
    </div>

</ContentWrapper>
