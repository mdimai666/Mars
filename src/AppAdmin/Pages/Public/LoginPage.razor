@page "/Login"
@layout BlankLayout

@*<Header1 />*@
<div>

    <div class="spacer-3"></div>

    <div class="card shadow rounded-15 border-0 mx-auto" style="max-width:490px;">
        <div class="card-body">

            <div class="d-flex flex-column" style="">
                <header class="p-5 d-none">
                    @*<h1 class="text-center">
                    <img src="/img/logo.png" alt="" />
                    </h1>*@

                </header>
                <main id="Content" class="flex-fill p-3 xcenter">
                    <div class="d-block mx-auto w-100" style="1width: 349px">
                        <h2 class="fz20px fw-bold text-center">ВХОД</h2>

                        <LoginForm />

                    </div>
                </main>
                <footer class="p-3 d-none">
                </footer>
            </div>
        </div>
    </div>

    <AuthorizeView>
        <Authorized>
            <h1>Hello, @context.User.Identity.Name!</h1>
            <p>User has the following claims:</p>
            <ul>
                @foreach (var claim in context.User.Claims)
                {
                    <li>@claim.Type: @claim.Value</li>
                }
            </ul>
        </Authorized>
        <NotAuthorized>
            <p>You are not logged in.</p>
        </NotAuthorized>
    </AuthorizeView>

    <div class="spacer-2"></div>

</div>

<style>
    h1 {
        font-weight: 600;
        font-size: 36px;
        color: var(--bs-primary);
    }
</style>
