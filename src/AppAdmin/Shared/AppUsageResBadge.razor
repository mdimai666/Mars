<div class="AppUsageResBadge position-relative">
    <i class="bi bi-memory"></i>
    @builderLayout.hostAppStat.MemoryUsage

    <div class="UsagePopContainer">
        <div class="card rounded-0 shadow">
            <div class="card-body p-3">
                <div class="vstack gap3">
                    <div class="_item">
                        <i class="bi bi-memory"></i>
                        memory usage: @builderLayout.hostAppStat.MemoryUsage
                    </div>
                    <div class="_item">
                        <i class="bi bi-hourglass"></i>
                        app uptime: @builderLayout.hostAppStat.AppUptime
                    </div>
                    <div class="_item">
                        <i class="bi bi-clock-history"></i>
                        system uptime: @builderLayout.hostAppStat.SystemUptime
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@code {
    [CascadingParameter]
    public BuilderLayout builderLayout { get; set; } = default!;
}

<style>
    .AppUsageResBadge {
        cursor: default;
    }

    .UsagePopContainer {
        position: absolute;
        bottom: 22px;
        max-width: 90vw;
        width: 350px;
        display: none;
    }

    .AppUsageResBadge:hover .UsagePopContainer {
        display: block !important;
    }
</style>
