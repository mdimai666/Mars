@using Microsoft.AspNetCore.Http
@using Mars.Shared.Resources
@* @page *@
@* @model Mars.SSO.Host.OAuth.Views.SSO.LoginPageModel *@
@{
    ViewData["Title"] = "Login";
    var error = ViewData["ErrorMessage"] as string;
}

<div class="login-card">
    <div class="text-center mb-4">
        <h4 class="fw-bold">@AppRes.SignIn</h4>
        <p class="text-muted">@AppRes.LoginPage_AccessYourAccount</p>
    </div>

    <form method="post" action="?">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="username" name="username" placeholder="Username" value="@ViewData["username"]" required>
            <label for="username">Username</label>
        </div>
        <div class="form-floating mb-3">
            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
            <label for="password">Password</label>
        </div>

        @* Если у тебя ASP.NET Core, можно добавить антифорджери токен *@
        @Html.AntiForgeryToken()

        @* @foreach (var kvp in ViewData["Request.Query"] as IQueryCollection)
        {
            <input type="hidden" name="@kvp.Key" value="@kvp.Value" />
        } *@

        <input type="hidden" name="credential_id" value="@ViewData["credential_id"]" />

        <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">@AppRes.Button_SignIn</button>
        </div>

        @if (!string.IsNullOrEmpty(error))
        {
            <div class="alert alert-danger mt-4" role="alert">
                @error
            </div>
        }

    </form>

    @if (false)
    {
        <hr class="my-4">
        <div class="text-center">
            <small class="text-muted">
                Don’t have an account?
                <a href="/register" class="text-decoration-none">Register</a>
            </small>
        </div>
    }
</div>
