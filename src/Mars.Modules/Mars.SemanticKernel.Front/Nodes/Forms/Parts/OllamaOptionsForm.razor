@using System.Text.Json.Nodes
@using AppFront.Shared.Components
@using Mars.SemanticKernel.Shared.Options
@using System.Text.Json

<FormItem2 For="() => Value.ModelId">
    <FluentTextField @bind-Value=Value.ModelId />
</FormItem2>
<FormItem2 For="() => Value.Endpoint">
    <FluentTextField @bind-Value=Value.Endpoint />
</FormItem2>

@code {
    OllamaOptions _value = default!;

    [Parameter]
    public OllamaOptions Value
    {
        get => _value;
        set
        {
            if (value == _value) return;
            _value = value;
            ValueChanged.InvokeAsync(_value);
        }
    }

    [Parameter]
    public EventCallback<OllamaOptions> ValueChanged { get; set; }

}
