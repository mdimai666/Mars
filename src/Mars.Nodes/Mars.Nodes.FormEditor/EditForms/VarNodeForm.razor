@using AppFront.Shared.Components
@using Microsoft.FluentUI.AspNetCore.Components
@inherits NodeEditForm
@attribute [NodeEditFormForNode(typeof(VarNode))]

<div class="form-group d-flex flex-column flex-fill">

    <div class="vstack gap-3">
        <FormItem2 For=@(()=>Node.VarType)>
            <FluentSelect TOption="string"
                Items="VarNode.ListTypesSelect()"
                @bind-Value=Node.VarType />
        </FormItem2>
        <FormItem2 For=@(()=>Node.DefaultValue)>
            <FluentTextField @bind-Value=Node.DefaultValue />
        </FormItem2>
    </div>

</div>

@code {
    [CascadingParameter] Node? Value { get; set; }
    VarNode Node { get => (VarNode)Value!; set => Value = value; }

}
