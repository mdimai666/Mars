<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mars</title>
    <link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/css/style.css" rel="stylesheet" />*@
    <link href="~/css/IdentityLayout.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column" style="min-height:100vh">
    @{
        bool allowPage = this.Context.Request.Path.ToString().StartsWith("/Identity/Account/Login");
    }
    @if (allowPage)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">Mars</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>
        <div class="container flex-fill">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted py-2">
            <div class="container">
                &copy; 2021 - Mars - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>
    }

    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/vendor/bootstrap5.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
