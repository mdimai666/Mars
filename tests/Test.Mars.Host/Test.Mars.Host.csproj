	  <Content Include="Files\ExampleFiles\file2.txt">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </Content>
	  <Content Include="Files\ExampleFiles\SubPath\file3.txt">
